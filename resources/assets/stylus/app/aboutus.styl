.mainheroaboutus {
    max-width: 1170px;
    margin-left: auto;
    margin-right: auto;
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    border-radius: 20px;
    color: #222;
    padding: 50px;
    margin-top:50px;
@media only screen and (max-width: 680px) {
    max-width: 300px!important;
   }
@media only screen and (max-width: 1100px) {
    max-width: 600px;
   }

.aboutbox {
  font-align: center;
  width: 90%;
  height: 300px;
  border-radius: 11px;
        
@media only screen and (max-width: 680px) {
    width: 100%;
    height: 80px;
    }
@media only screen and (max-width: 1100px) {
    width: 100%;
    height: 200px;
    }
  }
}

.aboutmiddle {
  text-align: center;
  font-family: 'Open Sans Condensed', sans-serif;
  font-size: 1.2em;
@media only screen and (max-width: 768px) {
    font-size: 20px;
    }
}

.abouth1 {
  font-size: 3em;
  margin-top: -0.3em;
  font-family: 'Open Sans Condensed', sans-serif;
  color: #4d4d4d;
@media only screen and (max-width: 768px) {
    font-size: 30px;
  }
}

.abouth2 {
  font-size: 3em;
  padding: 20px;
  font-family: 'Open Sans Condensed', sans-serif;
  color: #4d4d4d;
@media only screen and (max-width: 768px) {
    font-size: 30px;
  }
}

.aboutp {
  margin-top: 1.5em;
@media only screen and (max-width: 768px) {
    font-size: 20px;
  }
}

.social {
  font-size: 1.3em;
  padding: 2px;
  color: #4d4d4d;
  text-indent: 30px;
  line-height: 1.8;  
@media only screen and (max-width: 768px) {
    font-size: 15px;
  }
}
