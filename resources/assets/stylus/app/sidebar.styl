.menu {
  position: fixed;
  top: 95px;
  left: 0;
  height: 100%;
  list-style-type: none;
  margin: 0;
  padding: 0;
}
.menu li a{
    display:block;
    width:5em;
    text-indent:-500em;
    line-height:5em;
    text-align:center;
    color: #F08080;
    position: relative;
    border-bottom: 1px solid #ffe2e3;
    transition: background 0.3s ease-in-out;
}
.menu li a:before {
  speak: none;
  text-indent: 0em;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 1.4em;
}

.menu li a:hover{
  background: rgba(34,34,34,0.7);
  color: #fff;
}
.menu li.current a {
  background: rgba(34,34,34,0.7);
  color: #fff;
}
.menu li a.active {
  background: rgba(34,34,34,0.7);
  color: #fff;
}
.menu li a.active:after{
    position:absolute;
    left:5em;
    top:0;
    border:2.5em solid transparent;
    border-left-color:rgba(34,34,34,0.7);
    border-width: 2.5em 1em
}
.menu li{
    position:relative;
}
.menu li:after{
    content: attr(title);
    position:absolute;
    left:5em;
    top:0;
    height:5em;
    color: white;
    border-radius: 0px 25px 25px 0px;
    font-family: 'Open Sans Condensed', sans-serif;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    text-transform:uppercase;
    background: rgba(34,34,34,0.7);
    padding:2em;
    transition: all 0.3s ease-in-out;
    visibility:hidden;
    opacity:0;
}
.menu li:hover:after{
    visibility:visible;
    opacity:1;
}
@media screen and (max-height: 34em){
  .menu li{
    font-size:90%;
  }
}