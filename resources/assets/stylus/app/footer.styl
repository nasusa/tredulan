      /* Wrapper */
.icon-button {
	background-color: white;
	border-radius: 20px;
	display: inline-block;
	font-size: 5rem;
	height: 10rem;
	line-height: 10rem;
	margin: 0 5px;
	position: relative;
	text-align: center;
	width: 10rem;
  margin-top: 0.7em;
}

/* Circle */
.icon-button span {
	border-radius: 0;
	display: block;
	height: 0;
	left: 50%;
	margin: 0;
	position: absolute;
	top: 50%;
	-webkit-transition: all 0.3s;
	   -moz-transition: all 0.3s;
	     -o-transition: all 0.3s;
	        transition: all 0.3s;
	width: 0;
}
.icon-button:hover span {
	width: 10rem;
	height: 10rem;
	border-radius: 20px;
	margin: -5rem;
}

/* Icons */
.icon-button i {
	color: white;
	height: 10rem;
	left: 0;
	line-height: 10rem;
	position: absolute;
	top: 0;
	-webkit-transition: all 0.3s;
	   -moz-transition: all 0.3s;
	     -o-transition: all 0.3s;
	        transition: all 0.3s;
	width: 10rem;
	z-index: 10;
}

.facebook  {
	background-color: rgba(80,122,189,.7);
}
.instagram {
	background-color: rgba(102, 208, 121,.7);
}
.envelope-o {
	background-color: rgba(203,32,39,.7);
