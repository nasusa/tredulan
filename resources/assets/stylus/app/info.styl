.infomiddle {
    text-align: center;
    font-family: 'Open Sans Condensed', sans-serif;
    font-size: 1.2em;
}

.mainheroinfo {
    max-width: 1170px;
    margin-left: auto;
    margin-right: auto;
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    border-radius: 20px;
    color: #222;
    padding: 50px;
    margin-top: 50px;
@media only screen and (max-width: 680px) {
    max-width: 300px!important;
   }
@media only screen and (min-width: 681px) and (max-width: 1000px) {
  max-width: 550px;
}
@media only screen and (min-width: 1001px) and (max-width: 1360px) {
  max-width: 750px;
}

.map {
  padding: 20px;
  filter: grayscale(50%)
  opacity: 0.75;
@media all and (max-width: 680px) {
  max-width: 90%;
  max-height:250px;
  box-shadow: none;
  padding: 10px;
  margin: auto;
  vertical-align: middle;
  }
@media all and (min-width: 681px) and (max-width: 1100px) {
  max-width: 90%;
  max-height:550px;
  box-shadow: none;
  padding: 10px;
  margin: auto;
  vertical-align: middle;
  }
