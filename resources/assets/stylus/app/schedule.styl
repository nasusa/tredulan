.mainheroschedule {
    max-width: 1170px;
    margin-left: auto;
    margin-right: auto;
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    border-radius: 20px;
    color: #4d4d4d;
    padding: 50px;
    margin-top:50px;
      @media all and (max-width: 680px) {
        margin-top 20px;
        max-width: 300px;
    }
}


.schedulemiddle {
  text-align: center;
  font-family: 'Open Sans Condensed', sans-serif;
  font-size: 1.2em;
}

/*aikataulu*/

ul.main { 
  list-style: none;
  max-width: 75%;
  margin: 20px auto;
  display: flex;
  flex-flow: row wrap; 
  display: inline-block;
    @media all and (max-width: 680px) {
      max-width: 100%;
  } 
}

.date {
  width: 17%;
  padding: 15% 1% 0 0 ;
  float: left;
}

.date h3 {
  font-size: 1.5em;
  font-family: 'Open Sans Condensed', sans-serif;
}

.date p {
  font-size: 1em;
  font-family: 'Open Sans Condensed', sans-serif;
  color: #222;
}

.events {
  float: left;
  width: 80%;
  border-left: 1px solid #ccc;
  margin-top: 3%;
  padding-bottom: 30px;
}

.events-detail {
  max-width: 440px;
}

.events-detail li{
  padding: 15px;
  border-bottom: 1px dashed #ccc;
  line-height: 22px;
  transition: ease .4s all;
}

.events-detail li:hover {
  background: #e9e9e9;
}

.event-time {
  font-weight: 900;
}

.events-detail li a {
  text-decoration: none;
  color: #222;
}

.event-location {
    font-size: .8em;
    color: tomato;
    margin-left: 70px;
}

@media all and (max-width: 641px) {
    .date {
      width: 100%;
      border-bottom: 1px solid #ccc;
    }
  
  .events {
    border:none;
    width: 100%;
    margin-top: 0;
  }
  
  .events-detail {
    padding: 0;
  }
  
  li.date p {
    margin:0;
  }
}

.scheduleh1 {
  font-size: 3em;
  margin: -20px;
  color: #4d4d4d;
}