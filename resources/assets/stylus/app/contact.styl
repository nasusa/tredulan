.mainherocontact {
    max-width: 1170px;
    margin-left: auto;
    margin-right: auto;
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    border-radius: 20px;
    color:#4d4d4d;
    padding: 50px;
    margin-top: 100px;
    display: flex;
    flex-flow: row wrap;
    text-align: center;
}

form {
    width: 50%;
    margin-left: auto;
    margin-right: auto;
    h1 {
    font-size: 4em;
    font-family: 'Open Sans Condensed', sans-serif;
  }
}

input, textarea {
  float: left;
  width: 100%;
  max-width: 100%;
  border: none;
  margin: 0.5rem 0;
  padding: 0.5rem 1rem;
  border-radius: 0.3rem;
  background: darken(#f9f9f9, 10%);
  color: darken(#f9f9f9, 50%);
  
  &[type=submit] {
    background: #84AD47;
    color: #fff;
    width: auto;
    float: right;
  }

  &::placeholder {
    color: darken(#f9f9f9, 50%);
  }

  &.error {
    background: #AD4747;
    color: #fff;
    &::placeholder {
      color: darken(#AD4747, 60%);
    }
  }
}

textarea {
  height: 10rem;
}

.captcha {
  float:left;
  input {
    float: right;
  }

  input[name=question] {
    width: 4rem;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    text-align: right;
    padding-right: 0;
  }
  
  [name=captcha] {
    width: 5rem;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    padding-left: 0.5rem;
    &::placeholder {
      text-align: center;
    }
  }
}

// Generic Styles ;)
* {
  box-sizing: border-box;
}
