/*WRAPPER*/
.icon-button {
	background-color: white;
	border-radius: 20px;
	cursor: pointer;
	display: inline-block;
	font-size: 5rem;
	height: 10rem;
	line-height: 10rem;
	margin: 0 5px;
	position: relative;
	text-align: center;
	-webkit-user-select: none;
	   -moz-user-select: none;
	    -ms-user-select: none;
	        user-select: none;
	width: 10rem;
}

/*CIRCLE*/
.icon-button span {
	border-radius: 0;
	display: block;
	height: 0;
	left: 50%;
	margin: 0;
	position: absolute;
	top: 50%;
	-webkit-transition: all 0.3s;
	   -moz-transition: all 0.3s;
	     -o-transition: all 0.3s;
	        transition: all 0.3s;
	width: 0;
}
.icon-button:hover span {
	width: 10rem;
	height: 10rem;
	border-radius: 20px;
	margin: -5rem;
}

/*ICONS*/
.icon-button i {
	background: none;
	color: white;
	height: 10rem;
	left: 0;
	line-height: 10rem;
	position: absolute;
	-webkit-transition: all 0.3s;
	   -moz-transition: all 0.3s;
	     -o-transition: all 0.3s;
	        transition: all 0.3s;
	width: 10rem;
	z-index: 10;
}

